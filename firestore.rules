rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow access to diary_posts and quiz_answers for the duration of the trip
    match /diary_posts/{postId} {
      allow read, write: if true;
    }
    
    match /quiz_answers/{answerId} {
      allow read, write: if true;
    }

    match /{document=**} {
      // General fallback rule - extended for the trip duration
      allow read, write: if request.time < timestamp.date(2026, 2, 1);
    }
  }
}
